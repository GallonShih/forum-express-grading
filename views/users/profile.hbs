<div class="row mb-5">
  <div class="col-md-4">
    <img class="img-responsive center-block mb-5" src="{{user.image}}" style="width: 250px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
  </div>
  <div class="col-md-8">
    <h1>{{user.name}}</h1>
    <p>{{user.email}}</p>
    <p>{{commentedRestaurants.length}}已評論餐廳</p>
    <p>{{favoritedRestaurants.length}}收藏的餐廳</p>
    <p>{{followings.length}}followings(追蹤者)</p>
    <p>{{followers.length}}followers(追隨者)</p>
    <a class="btn btn-outline-secondary" href="{{user.id}}/edit">Edit</a>
  </div>
  <hr>
</div>

<div class="row mt-5">
  <div class="col-md-5">
    <div class="card">
      <div class="card-header">
        {{followings.length}}followings(追蹤者)
      </div>
      <div class="card-body row">
        {{#each followings}}
          <div class="col-md-3">
            <a href="/users/{{this.id}}">
              <img class="card-img-top img-fluid" src="{{this.image}}" alt="Card image cap" width="100px" height="100px"
                style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
            </a>
          </div>
        {{/each}}
      </div>
    </div>
    <br>
    <div class="card">
      <div class="card-header">
        {{followers.length}}followers(追蹤者)
      </div>
      <div class="card-body row">
        {{#each followers}}
          <div class="col-md-3">
            <a href="/users/{{this.id}}">
              <img class="card-img-top img-fluid" src="{{this.image}}" alt="Card image cap" width="100px" height="100px"
                style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
            </a>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="col-md-7">
    <div class="card">
      <div class="card-header">
        {{commentedRestaurants.length}}已評論餐廳
      </div>
      <div class="card-body row">
        {{#each commentedRestaurants}}
          <div class="col-md-3">
            <a href="/restaurants/{{this.id}}">
              <img class="card-img-top img-fluid" src="{{this.image}}" alt="Card image cap" width="100px" height="100px"
                style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
            </a>
          </div>
        {{/each}}
      </div>
    </div>
    <br>
    <div class="card">
      <div class="card-header">
        {{favoritedRestaurants.length}}收藏的餐廳
      </div>
      <div class="card-body row">
        {{#each favoritedRestaurants}}
          <div class="col-md-3">
            <a href="/restaurants/{{this.id}}">
              <img class="card-img-top img-fluid" src="{{this.image}}" alt="Card image cap" width="100px" height="100px"
                style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
            </a>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
